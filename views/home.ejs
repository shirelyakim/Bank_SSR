<!DOCTYPE html>
<html>
    <head>
        <%- include('includes/imports') %>
        <script src="assets/js/home.js"></script>
    </head>
    <body>
        <%- include('includes/nav') %>
        <div class="container">
            <div class="col-8">
                <h3 class="slide-left"> Your Total Balance: <%= user.balance %>₪</h3>
                <h4 class="header"> Your Transactions</h4>
                <br>
            </div>
            <div class="d-flex">
              <div class="mb-3">
              <label class="text-dark w-50">From Date:</label>
              <input type="date" class="w-50" id="fromDate">
             </div>
             <div class="mb-3">
              <label class="text-dark w-50">To Date:</label>
              <input type="date" class="w-50" id="toDate">
              </div>
              <div class="mb-3">
              <button class="btn btn-light update" onclick="filter()">filter</button>
                <a class="btn border-shadow update btn-light p-2" role="button" aria-pressed="true" data-bs-toggle="modal" data-bs-target="#newTransaction" onclick="cleanModal()">
                  <i class="bi bi-file-earmark-plus"></i> 
                </a>
              </div>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                  <th>Date</th>
                  <th>Username</th>
                  <th>Amount</th>
                </tr>
                </thead>
                <tbody id="transactionsTable">
                    <% for(var i = 0; i < transactions.length; i++) { %>
                    <tr>
                        <td><%= transactions[i].date.toLocaleDateString("en-GB") %></td>
                        <td><%= transactions[i].username %></td>
                        <td><%= transactions[i].amount %>₪</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
<!-- The Modal -->
<div class="modal" id="newTransaction">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">New Transaction</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
            <form id="createTransaction" onsubmit="newTransaction(event)">
                <div class="modal-body">
                    <input type="hidden" class="w-25" name="username" value=<%= user.userName %> required>
                    <input type="hidden" class="w-25" id="createSrc" name="src" value=<%= session.user_id %> required>
                  <div class="mb-3"></div>
                    <label for="shortName" class="text-dark w-50">Username</label>
                    <input type="text" class="w-25" id="createDst" name="dst" onkeyup="return validateUsername(this)" placeholder="Username" required>
                  </div>
                  <div class="mb-3">
                    <label for="shortName" class="text-dark w-50">Amount</label>
                    <input type="number" class="w-25" id="createAmount" name="amount" onkeyup="return validateAmount(this)" placeholder="10" required>
                  </div>
                </div>
                <div class="modal-footer">
                  <div class="form-group">
                      <button class="btn btn-danger update">Save</button>
                  </div>
              </div>
            </form>
        </div>
  
        <!-- Modal footer -->
      </div>
    </div>
  </div>
</html>