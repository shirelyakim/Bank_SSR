<!DOCTYPE html>
<html>
    <head>
        <%- include('includes/imports') %>
        <script src="assets/js/home.js"></script>
    </head>
    <body>
        <%- include('includes/nav') %>
        <div class="content">
            <div class="col-8">
                <% if(specificUser) { %>
                    <h4 class="header"> Transactions of <%= specificUser %></h4>
                <%} else { %>
                    <h4 class="header"> All Transactions</h4>
                <% } %>
            </div>
            <br>
            <table class="table table-striped text-center">
                <thead class="thead-dark">
                <tr>
                  <th>Date</th>
                  <th>From Username</th>
                  <th>To Username</th>
                  <th>Amount</th>
                </tr>
                </thead>
                <tbody id="transactionsTable">
                    <% for(var i = 0; i < transactions.length; i++) { %>
                    <tr>
                        <td><%= transactions[i].date.toLocaleDateString("en-GB") %></td>
                        <td><%= transactions[i].fromusername %></td>
                        <td><%= transactions[i].tousername %></td>
                        <td><%= transactions[i].amount %>â‚ª</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>